[Unit]
Description=Voxtype OSD overlay (layer-shell)
After=voxtype.service graphical-session.target
Requires=graphical-session.target

[Service]
Environment=LD_PRELOAD=/usr/lib64/libgtk4-layer-shell.so.0
ExecStart=%h/.local/bin/voxtype-overlay
Restart=on-failure
RestartSec=5

[Install]
WantedBy=graphical-session.target
